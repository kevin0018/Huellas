{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["node", "vitest"],
    "baseUrl": "./backend",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["dist"]
}